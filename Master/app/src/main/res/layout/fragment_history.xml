            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/jost_bold"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:singleLine="false"
            android:ellipsize="none" />

        <!-- Emergency Contact 3 -->
